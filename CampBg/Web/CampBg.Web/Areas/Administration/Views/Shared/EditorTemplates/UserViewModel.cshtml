@model CampBg.Web.Areas.Administration.ViewModels.UserViewModel

@using CampBg.Web.Areas.Administration.ViewModels

<div class="form-group">
    @Html.HiddenFor(x => x.Id)
    <div class="editor-label">
        @Html.LabelFor(x => x.UserName)
    </div>
    <div class="editor-field">
        @Html.EditorFor(x => x.UserName)
        @Html.ValidationMessageFor(x => x.UserName)
    </div>
    
    <div class="editor-label">
        @Html.LabelFor(x => x.Email)
    </div>
    <div class="editor-field">
        @Html.EditorFor(x => x.Email)
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    
    <div class="editor-label">
        @Html.LabelFor(x => x.IsSubscribedForNewsletter)
    </div>
    <div class="editor-field">
        @Html.EditorFor(x => x.IsSubscribedForNewsletter)
        @Html.ValidationMessageFor(x => x.IsSubscribedForNewsletter)
    </div>
    
    <div class="editor-label">
        @Html.LabelFor(x => x.IsDeleted)
    </div>
    <div class="editor-field">
        @Html.EditorFor(x => x.IsDeleted)
        @Html.ValidationMessageFor(x => x.IsDeleted)
    </div>

    <div class="editor-label">
        @Html.LabelFor(x => x.UserRoles)
    </div>

    <div class="editor-field">
       @(Html.Kendo()
            .MultiSelect()
            .Name("UserRoles")
            .Value("UserRolesIDs")
            .DataTextField("Text")
            .DataValueField("Id")
            .BindTo(new SelectList((IEnumerable<UserRoleViewModel>)this.ViewBag.UserRoles, "Id", "Text"))
            .Placeholder("No role selected"))

        @Html.ValidationMessageFor(x => x.UserRoles)
    </div>
</div>