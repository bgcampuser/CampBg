@model CampBg.Web.Areas.Products.ViewModels.FilterPageViewModel
@using Resource = CampBg.Web.Localization.Views;

@{
    ViewBag.Title = string.Format(Resource.Products_in_subcat, ViewBag.Category, ViewBag.Subcategory);
}

<div class="row">
    <ol class="col-lg-12 breadcrumb margin-top-small">
        <li>@Html.ActionLink(Resource.Home, "Index", new { area = string.Empty, controller = "Home" })</li>
        <li class="active">
            @string.Format("{0} - {1}", ViewBag.Category, ViewBag.Subcategory)
        </li>

    </ol>
</div>

<div class="row">
    @Html.Partial("Filters", Model.Filters)

    <div class="col-lg-9">
        <div class="row">
            <div id="filter-results">
                @Html.Partial("FilterResultsPartial", Model.InitialProducts)
            </div>
        </div>
    </div>
</div>