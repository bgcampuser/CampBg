@model CampBg.Web.ViewModels.ForgottenPasswordViewModel

@using Resource = CampBg.Web.Localization.Views

@{
    ViewBag.Title = Resource.Change_password;
}

<div class="row">
    <ol class="col-lg-12 breadcrumb margin-top-small">
        <li>@Html.ActionLink(Resource.Home, "Index", new { area = string.Empty, controller = "Home" })</li>
        <li class="active">
            @string.Format("{0}", Resource.Change_password)
        </li>
    </ol>
</div>

<h2>@ViewBag.Title</h2>

@Html.ValidationSummary()

@using (Html.BeginForm("ChangePassword", "Account"))
{
    @Html.HiddenFor(x => x.Token)
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                <div class="col-md-4">
                    @Html.ValidationMessageFor(x => x.Password)
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(m => m.PasswordConfirm, new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                @Html.PasswordFor(m => m.PasswordConfirm, new { @class = "form-control" })
            </div>
            <div class="col-md-4">
                @Html.ValidationMessageFor(x => x.PasswordConfirm)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <input type="submit" value="@Resource.Submit" class="pull-right btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
